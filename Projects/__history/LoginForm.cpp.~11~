//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TForm3 *Form3;
//---------------------------------------------------------------------------
__fastcall TForm3::TForm3(TComponent* Owner)
	: TForm(Owner)
{

}
//---------------------------------------------------------------------------

void __fastcall TForm3::LoginButtonClick(TObject *Sender)
{
        TForm1 *HomePage = new TForm1(this);

  try
  {
	   HomePage->ShowModal();
  }

  __finally
  {
	  delete HomePage;
  }
}
